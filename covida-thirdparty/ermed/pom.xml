
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.dfki.touchandwrite</groupId>
    <artifactId>ermed</artifactId>
    <packaging>jar</packaging>
    <version>2.1</version>
    <name>ermed</name>
    <url>http://www.touchandwrite.de/</url>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.3.1</version>
                <executions>
                    <execution>
                        <id>install-anoto-pen-0.9</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${project.basedir}/lib/ermed-mediva-client-0.1-shaded.jar</file>
                            <groupId>de.dfki.ermed</groupId>
                            <artifactId>ermed-mediva-client</artifactId>
                            <version>0.1</version>
                            <classifier>shaded</classifier>
                            <packaging>jar</packaging>
                            <generatePom>true</generatePom>
                        </configuration>     
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>